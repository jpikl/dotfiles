#!/usr/bin/env bash

set -euo pipefail

source ~/.local/lib/bash/core.sh

help() {
  cat <<-EOT
		List or delete local Git branches that are gone on remote.

		Usage:
		  $(self) [<options>]

		Options:
		  -d  Delete gone branches.
		  -D  Force deletion of gone branches.
		  -h  Print this help.
	EOT
}

main() {
  local delete=false
  local force=false
  local opt

  while getopts ":dDh" opt; do
    case "$opt" in
      d) delete=true ;;
      D) delete=true
         force=true ;;
      h) help; exit ;;
      *) die_invalid_opt "$opt" ;;
    esac
  done

  local branch
  while IFS= read -r branch; do
    if [[ $delete = true ]]; then
      if [[ $force = true ]]; then
        git branch --delete --force "$branch"
      else
        git branch --delete "$branch"
      fi
    else
      echo "$branch"
    fi
  done < <(git ls-branches -g)
}

main "$@"
