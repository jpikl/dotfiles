#!/usr/bin/env bash

set -euo pipefail

source "$BASH_LIB_DIR/core.sh"

help() {
  cat <<-EOT
		Execute command with current TTY as stdin.

		Usage:
		  $(self) [options] [--] <command> [argument]...

		Options:
		  -h  Print this help.

		Command:
		  Command to execute.

		Argument:
		  Zero or more command arguments.

		Environment variables:
		  TTY  Filename of a current TTY device.
	EOT
}

main() {
  local opt

  while getopts ":h" opt; do
    case "$opt" in
      h) help; exit ;;
      *) die_invalid_opt "$opt" ;;
    esac
  done

  shift $((OPTIND - 1))

  [[ $# -eq 0 ]] && die_missing_arg
  [[ ${TTY:-} ]] || die_no_var TTY # Defined in .bashrc

  if [[ ! -t 0 ]]; then
    "$@" < "$TTY"
  else
    "$@"
  fi
}

main "$@"
