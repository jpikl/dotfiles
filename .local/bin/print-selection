#!/usr/bin/env bash

set -euo pipefail

source "$BASH_LIB_DIR/core.sh"
source "$BASH_LIB_DIR/args.sh"

help() {
  cat <<-EOT
		Let user select one of words and print it.

		Usage:
		  $(self) [options] [--] [word]...

		Options:
		  -d, --default=<word>  Default value when no words are provided.
		  -h, --help            Display this help.

		Word:
		  Zero or more words to let user select from.
	EOT
}

init() {
  local -r short_opts=d:h
  local -r long_opts=default:,help
  local args

  args=$(get_args "$short_opts" "$long_opts" "$@")
  eval set -- "$args"

  while true ; do
    case "$1" in
      -d|--default) default=$2; shift 2 ;;
      -h|--help)    help; exit ;;
      --)           shift; break ;;
      *)            die_unprocessable_args ;;
    esac
  done

  words=("$@")
}

echo_select() {
  if [[ ${#words[@]} -eq 0 ]]; then
    [[ $default ]] && echo "$default"
    exit
  fi

  if [[ ${#words[@]} -eq 1 ]]; then
    echo "${words[0]}"
    exit
  fi

  local reply;

  select reply in "${words[@]}"; do
    if [[ $reply ]]; then
      echo "$reply"
      exit
    fi
  done
}

function main() {
  local default=
  local words

  init "$@"
  echo_select
}

main "$@"
