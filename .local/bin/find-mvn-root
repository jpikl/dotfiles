#!/usr/bin/env bash

set -euo pipefail

source "$BASH_LIB_DIR/core.sh"
source "$BASH_LIB_DIR/args.sh"

help() {
  cat <<-EOT
		Find root directory of a maven project.

		Usage:
		  $(self) [options] [--] [path]

		Options:
		  -h, --help  Display this help.

		Path:
		  Search starting point.
		  Default path is the current working directory.
	EOT
}

set_path() {
  [[ -d $1 ]] || die "'$1' is not a directory"
  path=$1
}

init() {
  local -r short_opts=h
  local -r long_opts=help
  local args

  args=$(get_args "$short_opts" "$long_opts" "$@")
  eval set -- "$args"

  while true ; do
    case "$1" in
      -h|--help) help; exit ;;
      --)        shift; break ;;
      *)         die_unprocessable_args ;;
    esac
  done

  if [[ $# -ge 1 ]]; then
    set_path "$1"
  fi
}

find_mvn_root() {
  cd "$path"

  local root_pom_xml
  root_pom_xml=$(find-upwards -name pom.xml | tail --lines=1)
  [[ $root_pom_xml ]] || die "unable to find root pom.xml"

  dirname "$root_pom_xml"
}

function main() {
  local path=$PWD

  init "$@"
  find_mvn_root
}

main "$@"
