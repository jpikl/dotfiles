#!/usr/bin/env bash

set -euo pipefail

source "$BASH_LIB_DIR/core.sh"
source "$BASH_LIB_DIR/args.sh"

help() {
  cat <<-EOT
		List scripts of a npm package.

		Usage:
		  $(self) [options]

		Options:
		  -h  Display this help.
	EOT
}

init() {
  local opt

  while getopts ":h" opt; do
    case "$opt" in
      h) help; exit ;;
      *) die_invalid_opt "$opt" ;;
    esac
  done
}

run() {
  # Lines with script names start with 2 spaces which we need to cut off.
  npm run | grep '^  \S' | cut --characters=3-
}

function main() {
  init "$@"
  run
}

main "$@"
