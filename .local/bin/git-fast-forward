#!/usr/bin/env bash

set -euo pipefail

source "$BASH_LIB_DIR/core.sh"

help() {
  cat <<-EOT
		Fast-forward local Git branches.

		Usage:
		  $(self) [<options>] [<branch>...]
		  $(self) [<options>] -a

		Args:
		  <branch>...  Branches to fast-forward.

		Options:
		  -a  Fast-forward all branches that are behind remote.
		  -h  Print this help.

		Use current branch when branch(es) or -a are not passed.
	EOT
}

main() {
  local all=false
  local opt

  while getopts ":ah" opt; do
    case "$opt" in
      a) all=true ;;
      h) help; exit ;;
      *) die_invalid_opt "$opt" ;;
    esac
  done

  # Check we are in a git repository.
  git status --porcelain >/dev/null

  shift $((OPTIND - 1))

  local branches
  local current_branch

  current_branch=$(git ls-branches -c)

  if [[ $all = true ]]; then
    mapfile -t branches < <(git ls-branches -b)
  elif [[ $# -gt 0 ]]; then
    branches=("$@")
  else
    branches=("$current_branch")
  fi

  local branch
  for branch in "${branches[@]}"; do
    if [[ $branch == "$current_branch" ]]; then
      git merge --ff-only || true
    else
      git fetch origin "$branch:$branch" || true
    fi
  done
}

main "$@"
