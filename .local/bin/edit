#!/usr/bin/env sh

set -eu

CONFIG=~/.config/editor

try_editor() {
    if [ -x "$(command -v "$1")" ]; then
        "$@"
        exit
    fi
}
# Try entries from the config file
if [ -f "$CONFIG" ]; then
    while IFS="" read -r COMMAND; do
        try_editor "$COMMAND" "$@"
    done <"$CONFIG"
fi

# Fallbacks
try_editor vim "$@"
try_editor vi "$@"
try_editor nano "$@"

echo >&2 "error: could not find any editor"
exit 1
