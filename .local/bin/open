#!/usr/bin/env bash

set -euo pipefail

source "$BASH_LIB_DIR/core.sh"
source "$BASH_LIB_DIR/args.sh"

help() {
  cat <<-EOT
		Open a file or URL in the user's preferred application.

		Usage:
		  $(self) [options] [--] <item>...

		Options:
		  -s  Skip opening errors.
		  -h  Display this help.

		Item:
		  One or more files or URLs to open.
	EOT
}

init() {
  local opt

  while getopts ":sh" opt; do
    case "$opt" in
      s) skip_errors=true ;;
      h) help; exit ;;
      *) die_invalid_opt "$opt" ;;
    esac
  done

  shift $((OPTIND - 1))

  if [[ $# -ge 1 ]]; then
    items=("$@")
  else
    die_missing_arg
  fi
}

open() {
  local -r item=$1

  echo "Opening '$item'"
  xdg-open "$item" || [[ $skip_errors = true ]] || die
}

function main() {
  local skip_errors=false
  local items

  init "$@"

  for item in "${items[@]}"; do
    open "$item"
  done
}

main "$@"
