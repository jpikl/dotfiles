#!/usr/bin/env bash

set -euo pipefail

source "$BASH_LIB_DIR/core.sh"
source "$BASH_LIB_DIR/args.sh"
source "$BASH_LIB_DIR/utils.sh"

help() {
  cat <<-EOT
		Open a file or URL in the user's preferred application.

		Usage:
		  $(self) [options] [--] <item>...

		Options:
		  -s  Skip opening errors.
		  -h  Display this help.

		Item:
		  One or more files or URLs to open.
	EOT
}

init() {
  local opt

  while getopts ":sh" opt; do
    case "$opt" in
      s) skip_errors=true ;;
      h) help; exit ;;
      *) die_invalid_opt "$opt" ;;
    esac
  done

  shift $((OPTIND - 1))

  if [[ $# -ge 1 ]]; then
    items=("$@")
  else
    die_missing_arg
  fi
}

open() {
  local -r cmd=$1
  local -r item=$2

  echo "Opening '$item'"
  "$cmd" "$item" || [[ $skip_errors = true ]] || die
}

run() {
  local cmd

  if is_command xdg-open; then
    cmd=xdg-open
  elif is_mingw && is_command start; then
    cmd=start
  else
    die "unable to detect native open command"
  fi

  for item in "${items[@]}"; do
    open "$cmd" "$item"
  done
}

function main() {
  local skip_errors=false
  local items

  init "$@"
  run
}

main "$@"
