#!/usr/bin/env bash

set -euo pipefail

source "$BASH_LIB_DIR/utils.sh"
source "$BASH_LIB_DIR/args.sh"

print_help() {
  echo "Opens a file or URL in the user's preferred application."
  echo
  echo "Usage:"
  echo "  $(self) [options] [--] <item>..."
  echo
  echo "Options:"
  echo "  -s, --skip-errors  Skip opening errors."
  echo "  -h, --help         Display this help."
  echo
  echo "Item:"
  echo "  One or more files or URLs to open."
}

process_args() {
  local -r short_opts=sh
  local -r long_opts=skip-errors,help
  local args

  args=$(get_args "$short_opts" "$long_opts" "$@")
  eval set -- "$args"

  while true ; do
    case "$1" in
      -s|--skip-errors) skip_errors=true; shift ;;
      -h|--help)        print_help; exit ;;
      --)               shift; break ;;
      *)                die_unprocessable_args ;;
    esac
  done

  if [[ $# -ge 1 ]]; then
    items=("$@")
  else
    die_missing_args
  fi
}

open() {
  local -r item=$1

  echo "Opening '$item'"
  xdg-open "$item" || [[ $skip_errors = true ]] || die
}

function main() {
  local skip_errors=false
  local items

  process_args "$@"
  require_cmd xdg-open

  for item in "${items[@]}"; do
    open "$item"
  done
}

main "$@"
