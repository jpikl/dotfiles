#!/usr/bin/env bash

set -euo pipefail

source "$BASH_LIB_DIR/core.sh"

help() {
  cat <<-EOT
		Generate new bash script from this template.

		Usage:
		  $(self) [options] [--] <name>

		Options:
		  -h  Print this help.

		Name:
		  Name of a new script.
	EOT
}

main() {
  local opt

  while getopts ":h" opt; do
    case "$opt" in
      h) help; exit ;;
      *) die_invalid_opt "$opt" ;;
    esac
  done

  shift $((OPTIND - 1))
  [[ $# -eq 0 ]] && die_missing_arg

  local target
  target=$(dirname "$0")/$1
  [[ -e $target ]] && die "'$target' already exists"

  cp "$0" "$target"
  chmod +x "$target"
  echo "Created '$target'"
}

main "$@"
