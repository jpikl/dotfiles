#!/usr/bin/env bash

set -euo pipefail

source "$BASH_LIB_DIR/core.sh"

help() {
  cat <<-EOT
		Generate new bash script from this template.

		Usage:
		  $(self) [options] [--] <name>

		Options:
		  -h  Display this help.

		Name:
		  Name of a new script.
	EOT
}

main() {
  local opt

  while getopts ":h" opt; do
    case "$opt" in
      h) help; exit ;;
      *) die_invalid_opt "$opt" ;;
    esac
  done

  shift $((OPTIND - 1))

  [[ $# -eq 0 ]] && die_missing_arg
  [[ ${LOCAL_BIN_DIR:-} ]] || die_no_var LOCAL_BIN_DIR

  cd "$LOCAL_BIN_DIR"
  cp "$(self)" "$1"
  chmod +x "$1"
}

main "$@"
