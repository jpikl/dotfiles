#!/usr/bin/env bash

# shellcheck source=utils.sh
source "$BASH_DIR/utils.sh"

print_help() {
  echo "List scripts of a npm package."
  echo
  echo "Usage:"
  echo "  $(self) [options]"
  echo
  echo "Options:"
  echo "  -h, --help  Display this help."
}

process_args() {
  require_gnu_getopt

  local -r short_opts=h
  local -r long_opts=help
  local args

  args=$(get_args "$short_opts" "$long_opts" "$@") || die_invalid_args
  eval set -- "$args"

  while true ; do
    case "$1" in
      -h|--help) print_help; exit ;;
      --)        shift; break ;;
      *)         die_unprocessable_args ;;
    esac
  done
}

npm_list_scripts() {
  require_cmd npm
  [[ -f package.json ]] || die "No package.json in the current directory!"
  # Lines with script names start with 2 spaces which we need to cut off.
  npm run | grep '^  \S' | cut --characters=3-
}

function main() {
  process_args "$@"
  npm_list_scripts
}

main "$@"
