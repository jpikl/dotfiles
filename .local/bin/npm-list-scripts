#!/usr/bin/env bash

set -euo pipefail

source "$BASH_LIB_DIR/core.sh"
source "$BASH_LIB_DIR/args.sh"

help() {
  cat <<-EOT
		List scripts of a npm package.

		Usage:
		  $(self) [options]

		Options:
		  -h, --help  Display this help.
	EOT
}

init() {
  local -r short_opts=h
  local -r long_opts=help
  local args

  args=$(get_args "$short_opts" "$long_opts" "$@")
  eval set -- "$args"

  while true ; do
    case "$1" in
      -h|--help) help; exit ;;
      --)        shift; break ;;
      *)         die_unprocessable_args ;;
    esac
  done
}

npm_list_scripts() {
  [[ -f package.json ]] || die "no package.json in the current directory"
  # Lines with script names start with 2 spaces which we need to cut off.
  npm run | grep '^  \S' | cut --characters=3-
}

function main() {
  init "$@"
  npm_list_scripts
}

main "$@"
