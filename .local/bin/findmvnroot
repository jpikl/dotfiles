#!/usr/bin/env bash

set -euo pipefail

source "$BASH_LIB_DIR/core.sh"

help() {
  cat <<-EOT
		Find root directory of a maven project.

		Usage:
		  $(self) [options] [--] [path]

		Options:
		  -h  Display this help.

		Path:
		  Search starting point.
		  Default path is the current working directory.
	EOT
}

main() {
  local opt

  while getopts ":h" opt; do
    case "$opt" in
      h) help; exit ;;
      *) die_invalid_opt "$opt" ;;
    esac
  done

  shift $((OPTIND - 1))

  if [[ $# -ge 1 ]]; then
    [[ -d $1 ]] || die "'$1' is not a directory"
    cd "$1"
  fi

  local root_dir

  root_dir=$(findup -name pom.xml -printf "%h\0" \
    | tail --zero-terminated --lines=1 \
    | tr --delete '\0')

  if [[ $root_dir ]]; then
    echo "$root_dir"
  else
    die "unable to find root pom.xml"
  fi
}

main "$@"
