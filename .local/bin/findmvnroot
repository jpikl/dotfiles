#!/usr/bin/env bash

set -euo pipefail

source "$BASH_LIB_DIR/core.sh"
source "$BASH_LIB_DIR/args.sh"

help() {
  cat <<-EOT
		Find root directory of a maven project.

		Usage:
		  $(self) [options] [--] [path]

		Options:
		  -h  Display this help.

		Path:
		  Search starting point.
		  Default path is the current working directory.
	EOT
}

set_path() {
  [[ -d $1 ]] || die "'$1' is not a directory"
  path=$1
}

init() {
  local opt

  while getopts ":h" opt; do
    case "$opt" in
      h) help; exit ;;
      *) die_invalid_opt "$opt" ;;
    esac
  done

  shift $((OPTIND - 1))

  if [[ $# -ge 1 ]]; then
    set_path "$1"
  fi
}

run() {
  cd "$path"

  local root_pom_xml
  root_pom_xml=$(findup -name pom.xml | tail --lines=1)
  [[ $root_pom_xml ]] || die "unable to find root pom.xml"

  dirname "$root_pom_xml"
}

function main() {
  local path=$PWD

  init "$@"
  run
}

main "$@"
