#!/usr/bin/env bash

set -euo pipefail

source "$BASH_LIB_DIR/core.sh"
source "$BASH_LIB_DIR/args.sh"

help() {
  cat <<-EOT
		Command description.

		Usage:
		  $(self) [options] [--] <argument>...

		Options:
		  -f  Flag description.
		  -h  Display this help.

		Argument:
		  Argument decription.
	EOT
}

init() {
  local opt

  while getopts ":fh" opt; do
    case "$opt" in
      f) flag=true ;;
      h) help; exit ;;
      *) die_invalid_opt "$opt" ;;
    esac
  done

  shift $((OPTIND - 1))

  if [[ $# -ge 1 ]]; then
    args=("$@")
  else
    die_missing_arg
  fi
}

run() {
  echo "flag=$flag"
  echo "args=${args[*]}"
}

main() {
  local flag=false
  local args

  init "$@"
  run
}

main "$@"
