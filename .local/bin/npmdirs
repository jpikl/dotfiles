#!/usr/bin/env bash

set -euo pipefail

source "$BASH_LIB_DIR/core.sh"

help() {
  cat <<-EOT
		Find directories of Node.js modules.

		Usage:
		  $(self) [options] [--] [path]

		Options:
		  -Z  Print results delimited by NUL character instead of newline.
		  -h  Display this help.

		Path:
		  Search starting point.
		  Default path is the current working directory.
	EOT
}

main() {
  local zero_terminated=false
  local opt

  while getopts ":Zh" opt; do
    case "$opt" in
      Z) zero_terminated=true ;;
      h) help; exit ;;
      *) die_invalid_opt "$opt" ;;
    esac
  done

  shift $((OPTIND - 1))

  if [[ $# -ge 1 ]]; then
    [[ -d $1 ]] || die "'$1' is not a directory"
    cd "$1"
  fi

  local expression
  local npm_dirs

  mapfile -t expression < <(genfindexpr -ls)
  mapfile -td '' npm_dirs < <(find . "${expression[@]}" -name package.json -printf "%h\0")

  [[ ${#npm_dirs[@]} -gt 0 ]] || die "unable to find any package.json"

  if [[ $zero_terminated = true ]]; then
    printf "%s\0" "${npm_dirs[@]}"
  else
    printf "%s\n" "${npm_dirs[@]}"
  fi
}

main "$@"
