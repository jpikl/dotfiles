#!/usr/bin/env bash

set -euo pipefail

source "$BASH_LIB_DIR/core.sh"
source "$BASH_LIB_DIR/args.sh"

help() {
  cat <<-EOT
		Aks user for confirmation.

		Usage:
		  $(self) [options] [--] <message>

		Options:
		  -h  Display this help.

		Arguments:
		  message  Confirmation message.
	EOT
}

init() {
  local opt

  while getopts ":fh" opt; do
    case "$opt" in
      h) help; exit ;;
      *) die_invalid_opt "$opt" ;;
    esac
  done

  shift $((OPTIND - 1))

  if [[ $# -ge 1 ]]; then
    message=$1
  else
    die_missing_arg
  fi
}

run() {
  local reply
  read -rn1 -p "$message [y/n]: " reply
  echo
  [[ $reply =~ [Yy] ]]
}

function main() {
  local message

  init "$@"
  run
}

main "$@"
