#!/usr/bin/env bash

set -euo pipefail

source "$BASH_LIB_DIR/core.sh"

help() {
  cat <<-EOT
		Aks user for confirmation.

		Usage:
		  $(self) [options] [--] <message>

		Args:
		  <message>  Confirmation message.

		Options:
		  -h  Print this help.
	EOT
}

main() {
  local opt

  while getopts ":h" opt; do
    case "$opt" in
      h) help; exit ;;
      *) die_invalid_opt "$opt" ;;
    esac
  done

  shift $((OPTIND - 1))
  [[ $# -eq 0 ]] && die_missing_arg

  printf "%s [y/n]: " "$1"

  local reply

  while true; do
    read -rsn1 reply
    if [[ $reply =~ [YyZzNn] ]]; then
      echo "$reply"
      break
    fi
  done

  [[ $reply =~ [YyZz] ]]
}

main "$@"
