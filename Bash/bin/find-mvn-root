#!/usr/bin/env bash

# shellcheck source=utils.sh
source "$BASH_DIR/utils.sh"

print_help() {
  echo "Find root directory of a maven project."
  echo
  echo "Usage:"
  echo "  $(self) [options] [path]"
  echo
  echo "Options:"
  echo "  -h, --help  Display this help."
  echo
  echo "Path:"
  echo "  Search starting point."
  echo "  Default path is the current working directory."
}

process_args() {
  require_gnu_getopt

  local -r short_opts=h
  local -r long_opts=help
  local args

  args=$(get_args "$short_opts" "$long_opts" "$@") || die_invalid_args
  eval set -- "$args"

  while true ; do
    case "$1" in
      -h|--help) print_help; exit ;;
      --)        shift; break ;;
      *)         die_unprocessable_args ;;
    esac
  done

  if [[ $# -ge 1 ]]; then
    path=$1
  fi
}

find_mvn_root() {
  [[ -d $path ]] || die "Path is not a directory!"
  cd "$path" || die

  local -r root_pom_xml=$(find-upwards -name pom.xml | tail --lines=1)

  [[ $root_pom_xml ]] || die "Unable to find root pom.xml!"
  dirname "$root_pom_xml"
}

function main() {
  local path=$PWD

  process_args "$@"
  find_mvn_root
}

main "$@"
