#!/usr/bin/env bash

# shellcheck source=utils.sh
source "$BASH_DIR/utils.sh"

print_help() {
  echo "Let user select one of words and print it."
  echo
  echo "Usage:"
  echo "  $(self) [word]..."
  echo
  echo "Options:"
  echo "  -d, --default=<word>  Default value when no words are provided."
  echo "  -h, --help            Display this help."
  echo
  echo "Word:"
  echo "  Zero or more words to let user select from."
}

process_args() {
  require_gnu_getopt

  local -r short_opts=d:h
  local -r long_opts=default:,help
  local args

  args=$(get_args "$short_opts" "$long_opts" "$@") || die_invalid_args
  eval set -- "$args"

  while true ; do
    case "$1" in
      -d|--default) default=$2; shift 2 ;;
      -h|--help)    print_help; exit ;;
      --)           shift; break ;;
      *)            die_unprocessable_args ;;
    esac
  done

  words=("$@")
}

echo_select() {
  if [[ ${#words[@]} -eq 0 ]]; then
    [[ $default ]] && echo "$default"
    exit
  fi

  if [[ ${#words[@]} -eq 1 ]]; then
    echo "${words[0]}"
    exit
  fi

  local reply;

  select reply in "${words[@]}"; do
    if [[ $reply ]]; then
      echo "$reply"
      exit
    fi
  done
}

function main() {
  local default
  local words

  process_args "$@"
  echo_select
}

main "$@"
