#!/usr/bin/env bash

# shellcheck source=utils.sh
source "$BASH_DIR/utils.sh"

print_help() {
  local -r self=$(basename "$0")

  echo "List scripts of a npm package."
  echo
  echo "Usage:"
  echo "  $self [options]"
  echo
  echo "Options:"
  echo "  -h, --help  Display this help."
}

process_args() {
  require_gnu_getopt

  local -r short_opts=h
  local -r long_opts=help
  local help=false
  local args

  args=$(get_args "$short_opts" "$long_opts" "$@") || die_invalid_usage
  eval set -- "$args"

  while true ; do
    case "$1" in
      -h|--help) help=true; shift ;;
      --)        shift; break ;;
      *)         die "Unable to process arguments!" ;;
    esac
  done

  if [[ $help = true ]]; then
    print_help
    exit
  fi
}

npm_list_scripts() {
  # Lines with script names start with 2 spaces which we need to cut off.
  npm run | grep '^  [a-z]' | cut --characters=3-
}

function main() {
  process_args "$@"
  npm_list_scripts
}

main "$@"
